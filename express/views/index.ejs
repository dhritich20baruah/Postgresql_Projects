<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>POSTGRESQL EXPRESS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  </head>
  <body>
    <form action="/addTodo" method="post" class="container">
        <div class="mb-3">
            <label for="todo" class="form-label">ADD TODO</label>
            <input type="text" class="form-control" id="todo" name="todo" autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">DATE</label>
            <input type="date" class="form-control" id="date" name="date">
        </div>
        <button class="btn btn-warning" type="submit">SUBMIT</button>
    </form>

    <div class="display-todos container my-5">
        <form method="post" action="/filter" class="my-3">
            <input type="date" class="form-control" id="date" name="date">
            <button class="btn btn-warning" type="submit">FILTER</button>
        </form>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% if(data.length>0){ %>
                <% for(let i=0; i<data.length; i++){ %>
            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= data[i].date %></h5>
                  <p class="card-text"><%= data[i].todo %></p>
                  <p>
                    <button class="btn btn-danger m-1"><i class="material-icons">delete</i></button>
                    <button class="btn btn-primary m-1"><i class="material-icons">border_color</i></button>
                  </p>
                </div>
              </div>
            </div>
            <%}%>
            <%}%>
          </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>